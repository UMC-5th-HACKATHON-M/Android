<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    
    <ImageView
        android:id="@+id/category_back_iv"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginStart="20sp"
        app:layout_constraintTop_toTopOf="@+id/category_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/category_title_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/category_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리를 선택해주세요."
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginTop="150sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/category_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="여행"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/rectangle_btn3"
            android:padding="20sp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="음식"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/rectangle_btn3"
            android:padding="20sp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="책"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/rectangle_btn3"
            android:padding="20sp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="영화/드라마"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/rectangle_btn3"
            android:padding="15sp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="건강"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/rectangle_btn3"
            android:padding="20sp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="음악"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/rectangle_btn3"
            android:padding="20sp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="연애"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/rectangle_btn3"
            android:padding="20sp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="진로"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/rectangle_btn3"
            android:padding="20sp"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="인생"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/rectangle_btn3"
            android:padding="20sp"
            android:layout_margin="10dp"/>



    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>