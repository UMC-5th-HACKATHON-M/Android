<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.community.WriteContentFragment">

    <TextView
        android:id="@+id/fragment_write_content_topic_tv"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="주제"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/rectangle_btn3"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/fragment_write_content_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="당신의 생각을 자유롭게 작성해주세요."
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/fragment_write_content_topic_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/fragment_write_content_title_et"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:gravity="start"
        android:textSize="15sp"
        android:hint="제목"
        android:background="@drawable/rectangle_btn3"
        app:layout_constraintTop_toBottomOf="@id/fragment_write_content_title_tv"
        app:layout_constraintStart_toStartOf="@id/fragment_write_content_title_tv"/>

    <EditText
        android:id="@+id/fragment_write_content_content_et"
        android:layout_width="320dp"
        android:layout_height="350dp"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:gravity="top"
        android:textSize="15sp"
        android:hint="답변을 작성해보세요"
        android:background="@drawable/rectangle_btn3"
        app:layout_constraintTop_toBottomOf="@id/fragment_write_content_title_et"
        app:layout_constraintStart_toStartOf="@id/fragment_write_content_title_et"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragment_write_content_cancel_btn"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="취소"
        android:textSize="15sp"
        android:textStyle="bold"
        android:background="@drawable/rectangle_btn4"
        app:layout_constraintTop_toBottomOf="@+id/fragment_write_content_content_et"
        app:layout_constraintStart_toStartOf="@+id/fragment_write_content_content_et" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragment_write_content_write_btn"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="작성하기"
        android:textSize="15sp"
        android:textStyle="bold"
        android:background="@drawable/rectangle_btn4"
        app:layout_constraintTop_toBottomOf="@+id/fragment_write_content_content_et"
        app:layout_constraintStart_toEndOf="@+id/fragment_write_content_cancel_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>