<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rectangle_btn3"
    android:layout_marginBottom="30dp">

    <TextView
        android:id="@+id/item_writing_topic_tv"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="주제"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/rectangle_btn4"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_writing_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/item_writing_topic_tv"
        app:layout_constraintStart_toStartOf="@id/item_writing_topic_tv" />

    <TextView
        android:id="@+id/item_writing_content_tv"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/item_writing_title_tv"
        app:layout_constraintStart_toStartOf="@id/item_writing_title_tv" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="더보기"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/blue2"
        app:layout_constraintTop_toBottomOf="@+id/item_writing_content_tv"/>
</androidx.constraintlayout.widget.ConstraintLayout>