<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.community.CommunityFragment">

    <CheckBox
        android:id="@+id/fragment_community_write_chk"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="15sp"
        android:text="Check"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@id/fragment_community_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fragment_community_title_tv"
        app:layout_constraintTop_toTopOf="@id/fragment_community_title_tv" />

    <TextView
        android:id="@+id/fragment_community_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의 주제"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragment_community_write_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="글쓰기"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/rectangle_btn4"
        android:drawableLeft="@drawable/layer_list"
        app:layout_constraintTop_toTopOf="@id/fragment_community_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/fragment_community_title_tv"
        app:layout_constraintStart_toEndOf="@+id/fragment_community_title_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/fragment_community_topic1_btn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="주제1"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/rectangle_btn3"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_community_title_tv"
        app:layout_constraintStart_toStartOf="@+id/fragment_community_write_chk" />

    <TextView
        android:id="@+id/fragment_community_topic2_btn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="주제2"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/rectangle_btn3"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_community_title_tv"
        app:layout_constraintEnd_toEndOf="@+id/fragment_community_write_btn" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_community_writing_rv"
        android:layout_width="330dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        tools:listitem="@layout/item_community_writing_rv"
        android:orientation="vertical"
        android:nestedScrollingEnabled="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="@id/fragment_community_topic1_btn"
        app:layout_constraintTop_toBottomOf="@id/fragment_community_topic1_btn"/>
</androidx.constraintlayout.widget.ConstraintLayout>