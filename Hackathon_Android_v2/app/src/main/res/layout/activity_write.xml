<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.community.WriteActivity">
    <FrameLayout
        android:id="@+id/write_frm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/activity_write_back_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_img"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="left|top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/activity_write_choose_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="주제를 선택해 주세요"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center|top"
            app:layout_constraintTop_toBottomOf="@+id/activity_write_back_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/activity_write_topic1_btn"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:text="주제1"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/rectangle_btn3"
            android:layout_marginStart="30dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="left|top"

            app:layout_constraintTop_toBottomOf="@id/activity_write_choose_tv"
            app:layout_constraintStart_toStartOf="@id/activity_write_back_iv"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/activity_write_topic2_btn"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:text="주제2"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/rectangle_btn3"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="right|top"

            app:layout_constraintTop_toBottomOf="@id/activity_write_choose_tv"
            app:layout_constraintEnd_toEndOf="parent"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>